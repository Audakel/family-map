<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/settings_titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title text"
        android:textStyle="bold"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/settings_descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_titleTextView"
        android:layout_marginTop="5dp"
        android:text="description text"
        />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/line_colors"
        android:layout_toLeftOf="@+id/mySwitch"
        android:prompt="@string/color" />

    <Switch
        android:id="@+id/mySwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text=""
        android:checked="true"
        />
        />
</merge>